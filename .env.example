APP_VERSION=1.0.0

PORT=8080
ALLOWED_ORIGINS=http://localhost:8080

# === 선택 1: Anything LLM 워크스페이스 프록시 (내장 RAG 위임) ===
ANYTHING_BASE=                 # 예: http://localhost:3001
ANYTHING_TOKEN=                # Bearer 토큰
WORKSPACE_ID=                  # 워크스페이스 ID

# === 선택 2: 외부 RAG + OpenAI 직접 호출 ======================
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant (읽기 전용 검색)
QDRANT_URL=                    # 예: https://xxx.qdrant.tech
QDRANT_API_KEY=                # (옵션)
QDRANT_COLLECTION=regulations  # 컬렉션명

# 모델 매핑(프런트 model → 실제 모델ID)
MODEL_MAP_CHATGPT=gpt-4o-mini
MODEL_MAP_CLAUDE=claude-3-5-sonnet-20240620
MODEL_MAP_GEMINI=gemini-1.5-pro

# LLM 호출 타임아웃(ms) - 기본 10000
LLM_TIMEOUT_MS=10000

# 히스토리/프롬프트 길이 가드
MAX_HISTORY_TURNS=8
MAX_PROMPT_CHARS=8000


# Rate Limit
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=60000

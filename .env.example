APP_VERSION=1.0.0

PORT=8080
ALLOWED_ORIGINS=http://localhost:8080

# === OpenAI API (필수) ===
OPENAI_API_KEY=sk-...
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# === Qdrant Vector DB (필수 - RAG 기능) ===
QDRANT_URL=https://xxx.qdrant.tech
QDRANT_API_KEY=your-api-key-here
QDRANT_COLLECTION=keris_documents

# === 모델 매핑 (프런트 model → 실제 모델ID) ===
MODEL_MAP_CHATGPT=gpt-4o-mini
MODEL_MAP_CLAUDE=claude-3-5-sonnet-20240620
MODEL_MAP_GEMINI=gemini-1.5-pro

# === LLM 설정 ===
LLM_TIMEOUT_MS=10000

# === 히스토리/프롬프트 길이 가드 ===
MAX_HISTORY_TURNS=8
MAX_PROMPT_CHARS=8000

# === Rate Limit ===
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=60000

# ========================================
# 참고: Anything LLM은 더 이상 사용하지 않습니다.
# 로컬에서 직접 파일 업로드 및 RAG 처리합니다.
# ========================================
